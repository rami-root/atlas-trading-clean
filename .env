# Environment Variables for Atlas Trading Project

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET="YOUR_VERY_SECRET_KEY_HERE"
# This is used for hashing passwords
BCRYPT_SALT_ROUNDS=10

# Database Configuration (Using SQLite for local development)
# The database file will be created in the project root.
DATABASE_URL="sqlite.db"

# AWS S3 Configuration (Used for file uploads/storage)
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY_ID"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_ACCESS_KEY"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="your-atlas-bucket"

# TRPC Configuration
TRPC_ENDPOINT="/api/trpc"
